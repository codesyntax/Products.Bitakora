<dtml-if "getPublishedComments(size=10)">
<h2><dtml-var "gettext('Recent Comments')"></h2>
<ul>
  <dtml-in "getPublishedComments(size=10)">
   <dtml-with getObject>
   <li><a href="<dtml-var blogurl>/<dtml-var postid>#comment<dtml-var getId>"> <dtml-var postTitle></a><br /><dtml-var showAuthor></li>
   </dtml-with>
  </dtml-in>
</ul>
</dtml-if>